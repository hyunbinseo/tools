{
	"compilerOptions": {
		"strict": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		"lib": [
			"DOM",
			"DOM.Iterable",
			// Node.js 20 supports ES2023 APIs
			// Firefox does not support WeakMap
			// See https://node.green/#ES2023
			// See https://caniuse.com/sr-es14
			"ES2023"
		],

		// JavaScript
		"allowJs": true,
		"checkJs": true,
		"outDir": "dist",

		// TypeScript
		"noEmit": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true
	}
}
